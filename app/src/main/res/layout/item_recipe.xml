<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/margin_5dp"
    card_view:cardElevation="@dimen/margin_5dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/card_bake_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_card"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/margin_10dp"
            android:paddingEnd="@dimen/margin_10dp"
            android:paddingStart="@dimen/margin_10dp"
            android:paddingTop="@dimen/margin_10dp"
            android:text="@string/labelBakeName"
            android:textColor="@color/colorNavigationMenuBg"
            android:textSize="@dimen/size_22sp" />

        <ImageView
            android:id="@+id/card_img_collapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:background="@drawable/all_circle_shape"
            android:padding="@dimen/margin_5dp"
            android:rotation="0"
            android:src="@android:drawable/ic_menu_more" />

        <TextView
            android:id="@+id/card_bake_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/card_bake_name"
            android:gravity="start"
            android:paddingBottom="@dimen/margin_10dp"
            android:paddingEnd="@dimen/margin_10dp"
            android:paddingStart="@dimen/margin_10dp"
            android:text="@string/labelBakeDescription"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/size_22sp"
            android:visibility="gone" />
    </RelativeLayout>
</android.support.v7.widget.CardView>