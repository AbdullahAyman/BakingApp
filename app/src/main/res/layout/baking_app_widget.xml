<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#99f1efe9"
    android:padding="@dimen/widget_margin">

    <RelativeLayout
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_card"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cooking" />

        <TextView
            android:id="@+id/card_bake_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/img_card"
            android:gravity="start"
            android:paddingBottom="@dimen/margin_10dp"
            android:paddingStart="@dimen/margin_20dp"
            android:paddingTop="@dimen/margin_20dp"
            android:text="@string/labelBakeName"
            android:textColor="@color/colorNavigationMenuBg"
            android:textSize="@dimen/size_22sp" />

        <ImageView
            android:id="@+id/card_img_collapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/img_card"
            android:layout_marginEnd="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:background="@drawable/all_circle_shape"
            android:padding="@dimen/widget_margin"
            android:rotation="0"
            android:src="@android:drawable/ic_menu_more"
            android:visibility="gone" />

        <TextView
            android:id="@+id/card_bake_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/card_bake_name"
            android:gravity="start"
            android:paddingBottom="@dimen/margin_10dp"
            android:paddingEnd="@dimen/margin_10dp"
            android:paddingStart="@dimen/margin_20dp"
            android:text="@string/labelBakeDescription"
            android:textColor="@color/colorNavigationMenuBg"
            android:textSize="@dimen/size_22sp" />
    </RelativeLayout>


</RelativeLayout>